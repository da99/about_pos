#!/usr/bin/env bash
# -*- bash -*-
#
#
set -u -e -o pipefail

files="specs/$@.rb"
if [[ -f "$files" ]]; then
  shift
else
  files="$(find specs/ -maxdepth 1 -type f -iname "*.rb" )"
fi

if [[ -z "$files" ]]; then
  colorize yellow "No tests found." 1>&2
  exit 0
else
  bundle exec bacon specs/lib/helpers.rb $files "$@"
fi
